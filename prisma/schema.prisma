generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(MANAGER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Creator {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  platform    Platform
  status      Status   @default(ACTIVE)
  avatarUrl   String?
  bio         String?
  joinedAt    DateTime @default(now())
  updatedAt   DateTime @updatedAt

  earnings    Earning[]
  metrics     Metric[]
}

model Earning {
  id          String   @id @default(cuid())
  amount      Float
  date        DateTime
  source      String
  creatorId   String
  creator     Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
}

model Metric {
  id          String   @id @default(cuid())
  followers   Int
  views       Int
  likes       Int
  engagement  Float?
  date        DateTime
  creatorId   String
  creator     Creator  @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
}

enum Platform {
  INSTAGRAM
  TIKTOK
  YOUTUBE
  ONLYFANS
  PRIVACY
  TWITTER
}

enum Status {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING
}

enum Role {
  ADMIN
  MANAGER
}